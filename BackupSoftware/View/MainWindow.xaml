<Window x:Class="BackupSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackupSoftware"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     <Grid Background="#F5F5F5">
        <Grid Background="White" Grid.Row="1" Margin="25,40,25,15" >
            <Button Height="30"  Content="Add User" Width="100" VerticalContentAlignment="Center" Padding="5" Margin="25" VerticalAlignment="Top" HorizontalAlignment="Right" BorderThickness="1" BorderBrush="#E0E0E0"  />
            <ListView Name="UserList"  BorderBrush="#cdcdcd" Margin="40,70,10,25" Padding="0" SelectionChanged="UserList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Job Name"/>
                        <GridViewColumn  Header="Job Type"/>
                        <GridViewColumn  Header="Job Source"/>
                        <GridViewColumn  Header="Job Destination"/>
                    </GridView>
                </ListView.View>
            </ListView>            
        </Grid>
                              
    </Grid>
</Window>
